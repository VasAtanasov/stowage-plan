<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab id="CargoPlanTab" label="Cargo Plan">
        <group id="CargoPlanGroup" label="Calculations">
          <button id="UnitsAndWeightsButton" label="Units and Weights" size="large" onAction="CargoCalculations.CalculateUnitsAndWeights" imageMso="Calculator" />
          <button id="UnloadPortsButton" label="Clear Port(s)" size="large" onAction="ClearPortModule.ClearSelectedPorts" imageMso="AddInsMenu" />
          <button id="PreArrivalButton" label="Pre-Arrival Plan" size="large" onAction="PreArrivalModule.PreArrivalPort" imageMso="DataSubmitToOfficeServer" />
        </group>
        <group id="DrawingPlanGroup" label="Drawings">
          <button id="AddStaticCargoBox" label="Static Cargo" size="large" onAction="CargoBox.AddStaticCargoBox" imageMso="TextBoxWordClassic" />
        </group>
        <group id="PortsArrangementGroup" label="Ports Arrangement">
          <button id="MoveRowUpButton" label="Move Row Up" size="large" onAction="TableArrangement.MoveTableRowUp" imageMso="ShapeUpArrow" />
          <button id="MoveRowDownButton" label="Move Row Down" size="large" onAction="TableArrangement.MoveTableRowDown" imageMso="ShapeDownArrow" />
        </group>
        <group id="DocumentsGroup" label="Documents">
          <button id="BackUpStowagePlanButton" label="Create Backup" size="large" onAction="Utils.BackUpStowagePlanAction" imageMso="FileBackUpSqlDatabase" />
          <button id="ExportDeparturePlanButton" label="Departure Plan" size="large" onAction="DeparturePlan.ExportDeparturePlanButton" imageMso="ExportTextFile" />
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI> 