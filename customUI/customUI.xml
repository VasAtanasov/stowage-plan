<customUI onLoad="RibbonOnLoad" xmlns="http://schemas.microsoft.com/office/2006/01/customui">
  <ribbon>
    <tabs>
      <tab id="CargoPlanTab" label="Cargo Plan">
        <group id="CargoPlanGroup" label="Calculations">
          <button id="UnitsAndWeightsButton" label="Units and Weights" size="large" onAction="App_Main.Main" image="laptop" />
          <button id="UnloadPortsButton" label="Clear Port(s)" size="large" onAction="ClearPortModule.ClearSelectedPorts" image="forklift" />
          <button id="ValidateCalculationsButtonCheck" label="Validate" size="large" onAction="ValidateCalculations.ValidateUnitsAndWeights" image="check" />
        </group>
        <group id="DrawingPlanGroup" label="Drawings">

          <button id="AddStaticCargoBox" label="Add Static Cargo" size="large" onAction="CargoBox.AddStaticCargoBox" image="box" />
          <button id="AddInfoBox" label="Add Info Box" size="large" onAction="CargoBox.AddInfoBoxAction" image="info" />
          <button id="SetDestinationButton" label="Set Destination" size="large" onAction="MainDeckModule.SetDestinationPortAction" image="pallet" />
          <button id="ClearSelectionButton" label="Delete Selection" size="large" onAction="ClearPortModule.CleareSelectionAction" image="eraser" />
          <menu id="CustomShapesMenu" label="Shapes" imageMso="ShapesMoreShapes" size="large">
            <toggleButton label="Rectangle" idMso="ShapeRectangle" />
            <toggleButton label="Rectangle Callout" idMso="ShapeRoundedRectangularCallout" />
            <toggleButton label="Free Form" idMso="ShapeFreeform" />
            <button id="HeadToForeButton" label="Head To Fore" onAction="App_Main.Main" imageMso="ShapeRightArrow" />
            <button id="HeadToAftButton" label="Head To Aft" onAction="App_Main.Main" imageMso="ShapeLeftArrow" />
            <button id="HeadToPortButton" label="Head To Port" onAction="App_Main.Main" imageMso="ShapeUpArrow" />
            <button id="HeadToStbdButton" label="Head To Stbd" onAction="App_Main.Main" imageMso="ShapeDownArrow" />
          </menu>
        </group>
        <group id="PortsArrangementGroup" label="Ports Arrangement">
          <button id="MoveRowUpButton" label="Move Row Up" size="large" onAction="App_Main.Main" imageMso="ShapeUpArrow" />
          <button id="MoveRowDownButton" label="Move Row Down" size="large" onAction="App_Main.Main" imageMso="ShapeDownArrow" />
          <button id="ToggleRowsButton" label="Toggle Rows" size="large" onAction="App_Main.Main" image="show" />
        </group>
        <group id="DocumentsGroup" label="Documents">
          <button id="BackUpStowagePlanButton" label="Create Backup" size="large" onAction="App_Main.Main" image="backup" />
          <button id="ExportDeparturePlanButton" label="Export Departure Plan" size="large" onAction="App_Main.Main" image="cargo" />
          <button id="PreArrivalButton" label="Create Pre-Arrival Plan" size="large" onAction="App_Main.Main" image="checklist" />
          <button id="ExportDischargePlanButton" label="Export Discharge Plan" size="large" onAction="App_Main.Main" image="crane" />
        </group>
        <group idMso="GroupFont" />
        <group idMso="GroupAlignmentExcel" />
      </tab>
    </tabs>
  </ribbon>
</customUI> 